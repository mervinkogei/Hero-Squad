{{#partial "content"}}
<h1 class="squads">SQUADS</h1>
<div class="album py-5 ">
    <div class="container">
        <div class="row">
            {{#each }}({{squad}} in {{squads}})
            <div class="col-md-4">
                <div class="card  mb-4 box-shadow text-center">
                    <div class="card-body">
                        <h5 class="card-title"> {{name}} </h5>
                        <p class="card-text"> {{cause}} </p>
                        <a class="btn btn-primary" href="/squads/{{id}}">Details</a>
                        <p class="text-muted">Max size: {{max_size}}</p>
                    </div>
                </div>
            </div>
{{/each}}
        </div>

        <div>
            <a class="btn btn-info d-flex justify-content-center" style ="max-width:10rem" href="/squads/new">Add New Squad</a>
        </div>
    </div>
</div>
{{/partial}}
